/* components/home/SecKill/SecKill.wxss */
.SecKill{
  width: 100%;
  background: #fff;
}
.SecKill_title{
    height: 68rpx;
    padding: 24rpx 28rpx 16rpx;
    font-size: 24rpx;
    line-height: 68rpx;
    box-sizing: border-box;
    color: #000;
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.SecKill_time_wrap{
   display: flex;
}
.SecKill_time_wrap .title{
   font-size: 28rpx;
   font-weight: bold;
   margin-right: 16rpx;
}

.timeStampWrap .timeStamp{
  display: inline-block;width: 40rpx;height: 30rpx;line-height: 30rpx;background: #000;color: #fff;text-align: center;border-radius:6rpx; }
.SecKill_more{
  display: flex;
  justify-content: center;
  align-items: center;
}
.SecKill_more .txt{margin-right: 8rpx;}
.SecKill_more image{
  width: 30rpx;
  height: 30rpx;
  background: #fff;
}

.goodsWrap {
  width: 92%;
  height:  340rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  display: flex;
  background: #fff;
  overflow-x: scroll;
  overflow-y: hidden;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.SecKillList {
  width: 2000rpx;
  height: 300rpx;
  border: 2rpx solid rgb(248, 241, 241);
  margin-right: 12rpx;
  border-radius: 6rpx;
  background: #fff;
}
.SecKillItem {
  width: 190rpx;
  max-height: 190rpx;
  border: 2rpx solid rgb(248, 241, 241);
  background:#eee;
}
.SecKillItem image {
  width: 100%;
  height: 190rpx;
  border-radius: 6rpx;
}
.SecKill_itemName {
  width: 190rpx;
  padding: 0 6rpx;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
}
.priceWrap {
  padding: 0 16rpx;
  box-sizing: border-box;
}
.promotion_price {
  color: #fc487b;
  margin-right: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.market_price{
  color: rgb(190, 184, 184);
  margin-right: 16rpx;
  font-size: 20rpx;
  text-decoration: line-through;
}




